{
  "name": "@chore-dev/xlsx2json",
  "version": "1.0.0",
  "description": "Convert .xlsx to .json",
  "keywords": [
    "Convert",
    "Converter",
    "JSON",
    "Tool",
    "Tools"
  ],
  "type": "module",
  "bin": "./bin/xlsx2json.js",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "build:watch": "nodemon --watch ./src --ext ts --exec yarn build",
    "prepare": "husky",
    "release": "release-it --config .release-it.json",
    "// ESLint": "---------- ---------- ---------- ---------- ----------",
    "eslint": "yarn prettier:fix; yarn eslint:no-glob .",
    "eslint:no-glob": "eslint --cache --color --config eslint.config.js",
    "eslint:fix": "yarn eslint --fix --quiet",
    "eslint:fix:no-glob": "yarn eslint:no-glob --fix --quiet",
    "// Prettier": "---------- ---------- ---------- ---------- ----------",
    "prettier": "yarn prettier:base -c",
    "prettier:base": "yarn prettier:base:no-glob './**/*.{js?(x),ts?(x),json}'",
    "prettier:base:no-glob": "prettier --cache --config .prettier.config.js --ignore-path .prettierignore --ignore-unknown",
    "prettier:fix": "yarn prettier:base -w",
    "prettier:fix:no-glob": "yarn prettier:base:no-glob -w"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17.12",
    "chalk": "^5.3.0",
    "change-case": "^5.4.4",
    "command-line-args": "^6.0.0",
    "lodash-es": "^4.17.21",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@chore-dev/composer": "^1.0.12",
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@eslint/js": "^9.11.1",
    "@release-it/conventional-changelog": "^8.0.2",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-typescript": "^12.1.0",
    "@types/command-line-args": "^5.2.3",
    "@types/eslint__js": "8",
    "@types/lint-staged": "^13.3.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rollup": "^4.22.4",
    "rollup-plugin-uglify": "^6.0.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.7.0"
  },
  "author": "Chore Team",
  "contributors": [
    {
      "name": "Issac Li",
      "email": "issac.li.523@gmail.com"
    }
  ],
  "homepage": "https://github.com/chore-dev/xlsx2json",
  "repository": {
    "type": "git",
    "url": "https://github.com/chore-dev/xlsx2json"
  },
  "bugs": {
    "url": "https://github.com/chore-dev/xlsx2json/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "Apache-2.0"
}
